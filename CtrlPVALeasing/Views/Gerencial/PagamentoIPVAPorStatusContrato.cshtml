@model IEnumerable<CtrlPVALeasing.Models.ContratosVeiculosViewModel>
<head>
    <meta name="viewport" content="width=device-width" />

    <!-- Este css dá conflito e faz as janelinhas de filtro do grid ficarem desalinhadas com o símbolo de filtro-->
    <!-- <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" /> -->
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>

    <!-- <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"> </script> -->

</head>
@{
    ViewBag.Title = "Pagamento de IPVA por Status de Contrato";
}

@using (Html.BeginForm("PagamentoIPVAPorStatusContrato", "Gerencial", FormMethod.Post, new { id = "FormAltera" }))
{
    <div class="jumbotronFundo">
        <input type="hidden" name="escolha" id="escolha" value="nada" />
        <center>
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                    <th class="busca" width="90%">
                        <h2>PAGAMENTO DE IPVA POR SATATUS DE CONTRATO</h2>
                    </th>

                    <th>
                        <a href="/" class="btn2 btn-primary-menu btn-sm">MENU</a>
                    </th>
                </tr>
                <tr>
                    <td>
                        <input onclick="validateForm('gcvs');" class="btn4 btn-primary-imp .btn-sm" type="button" name="Submit" id="Submit" value="GERAR CSV" />
                    </td>

                </tr>
            </table>
            <hr />
        </center>

        <center>
            <table width="100%" border="1" cellspacing="0" cellpadding="10" style="border-style:inherit">
                <tr>
                    <td>
                        <b class="fonte-cinza-escuro">DADOS DOS CONTRATOS:</b>
                        <table border="0" style="border-style:inherit">
                            <tr>
                                <td>
                                    <div class="fonte-cinza-claro fonte-tamanho-form">Total de Contratos:&nbsp;&nbsp;&nbsp;</div>
                                </td>
                                @if (Model != null)
                                {
                                    @Html.Partial("_ContadorDeGrid")
                                }
                            </tr>
                            <tr>
                                <td class="input-sm-fino">&nbsp;</td>
                            </tr>
                            <tr>
                                @if (Model != null)
                                {
                                    @Html.Partial("_GridPagamentos")
                                }
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </center>

    </div>
}
<script>
    try {
        function validateForm(a) {
            if (a == "gcvs") {
                document.getElementById("escolha").value = "gcvs";
            }
            document.getElementById("FormAltera").submit();
            return true;
        }
    }
    catch (e) {
        alert("Erro: " + e);
    }
</script>