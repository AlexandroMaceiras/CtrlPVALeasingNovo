@model IEnumerable<CtrlPVALeasing.Models.ContratosVeiculosViewModel>

@{
    ViewBag.Title = "Registrar Situação do Ciente";
}

<script>
    function chamaErro1() {
        $(document).ready(function () {
            $("#msgErro1").modal();
