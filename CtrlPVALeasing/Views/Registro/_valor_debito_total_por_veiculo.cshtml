@model IEnumerable<CtrlPVALeasing.Models.ContratosVeiculosViewModel>
@{
    ViewBag.Title = "Consultar Contrato de Leasing";
    Layout = null;

    var total = Model.Sum(i => i.valor_debito_total);
    if (total == 0)
    {
        total = null;
    }
}
<div class="fonte-cinza-claro fonte-tamanho-form">
    Valor Total do Débito (Veículo): &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <input class="input-sm-fino" value="@total" type="text" name="contrato" size="30" style="text-transform:uppercase" disabled="disabled" />
</div>




